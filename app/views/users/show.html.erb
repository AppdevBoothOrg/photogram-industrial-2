<h1>
  <%= @user.username %>
</h1>

<h2>
  Own photos
</h2>


<% current_user.own_photos.each do |a_photo| %>
  <div class="row mb-4">
    <div class="col-md-6 offset-md-3" >
      <div class="card">
        <%= image_tag a_photo.image, class: "card-img-top" %>
         <div class="card-body">
          <h5 class="card-title"><%= a_photo.owner.username %></h5>
          <p class="card-text"><%= a_photo.caption %></p>
        </div>

        <ul class="list-group list-group-flush">
          <% a_photo.comments.each do |a_comment| %>
            <div class="media">
              <img src="..." class="mr-3" alt="...">
              <div class="media-body">
                <h5 class="mt-0"><%= a_comment.author.username %></h5>
                <p><%= a_comment.body %></p>
              </div>
            </div>
          <% end %>
        </ul>

        <div class="card-body">
          <%= render "comments/form", comment: Comment.new(photo_id: a_photo.id) %>
        </div>
      </div>
    </div>
  </div>
<% end %>

